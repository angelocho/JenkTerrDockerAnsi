pipeline {
    agent any

    environment {
        TERRAFORM_PATH = '/usr/local/bin/terraform'  // Ruta de terraform en la máquina local
    }

    stages {
        stage('Run Terraform Init') {
            steps {
                script {
                    // Ejecuta terraform init en la máquina local
                    sh 'terraform init ./Terraform'  // El directorio de trabajo con los archivos .tf
                }
            }
        }
        stage('Run Terraform Plan') {
            steps {
                script {
                    // Ejecuta terraform plan en la máquina local
                    sh 'terraform plan ./Terraform'
                }
            }
        }
        stage('Run Terraform Apply') {
            steps {
                script {
                    // Ejecuta terraform apply en la máquina local
                    sh 'terraform apply -auto-approve ./terraform'
                }
            }
        }
    }

    post {
        always {
            // Aquí puedes agregar acciones de limpieza si es necesario
        }
    }
}
